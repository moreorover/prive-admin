{
  "name": "prive-admin",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "^4.8.2",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.18",
      "@trpc/client": "^11.7.2",
      "drizzle-orm": "^0.45.1",
      "@types/pg": "^8.16.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @prive-admin/db db:push",
    "db:studio": "turbo -F @prive-admin/db db:studio",
    "db:generate": "turbo -F @prive-admin/db db:generate",
    "db:migrate": "turbo -F @prive-admin/db db:migrate",
    "db:start": "turbo -F @prive-admin/db db:start",
    "db:watch": "turbo -F @prive-admin/db db:watch",
    "db:stop": "turbo -F @prive-admin/db db:stop",
    "db:down": "turbo -F @prive-admin/db db:down",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "@prive-admin/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@prive-admin/config": "workspace:*",
    "@types/bun": "catalog:",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.9"
}
