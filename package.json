{
  "name": "prive-admin",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.3.1",
      "zod": "^4.3.6",
      "typescript": "^5",
      "@types/bun": "^1.3.9",
      "hono": "^4.12.2",
      "@trpc/server": "^11.10.0",
      "better-auth": "^1.4.19",
      "@trpc/client": "^11.10.0",
      "drizzle-orm": "^0.45.1",
      "@types/pg": "^8.16.0"
    }
  },
  "type": "module",
  "scripts": {
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @prive-admin/db db:push",
    "db:studio": "turbo -F @prive-admin/db db:studio",
    "db:generate": "turbo -F @prive-admin/db db:generate",
    "db:migrate": "turbo -F @prive-admin/db db:migrate",
    "db:start": "turbo -F @prive-admin/db db:start",
    "db:watch": "turbo -F @prive-admin/db db:watch",
    "db:stop": "turbo -F @prive-admin/db db:stop",
    "db:down": "turbo -F @prive-admin/db db:down",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "@prive-admin/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@prive-admin/config": "workspace:*",
    "@types/bun": "catalog:",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "turbo": "^2.8.11",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.9"
}
