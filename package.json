{
  "name": "prive-admin",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @prive-admin/db db:push",
    "db:studio": "turbo -F @prive-admin/db db:studio",
    "db:generate": "turbo -F @prive-admin/db db:generate",
    "db:migrate": "turbo -F @prive-admin/db db:migrate",
    "db:start": "turbo -F @prive-admin/db db:start",
    "db:watch": "turbo -F @prive-admin/db db:watch",
    "db:stop": "turbo -F @prive-admin/db db:stop",
    "db:down": "turbo -F @prive-admin/db db:down",
    "changeset": "changeset",
    "version-packages": "changeset version"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/cli": "^2.29.8",
    "@prive-admin/tsconfig": "workspace:*",
    "@types/node": "^22.19.2",
    "turbo": "^2.6.3"
  },
  "packageManager": "pnpm@10.12.1"
}
